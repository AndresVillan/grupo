azul = #3f91cc
gris = #eaebed


body
	background #5a9cc2
	
#contenedor
	margin 25px auto
	width 1000px

	header
		background white
		border-radius 10px 10px 0 0
		width 100%
		height 50px

	footer
		background white
		border-radius 0 0 10px 10px 
		width 100%
		height 50px


	.form-registro

		input
			border-radius 10px 10px 10px 10px
			border 1px solid gris
			display block
			font-size 12px
			height 30px
			margin-bottom 10px
			outline none
			padding 5px 15px 5px 15px
			box-shadow 1px 1px 1px rgba(0, 0, 0, .2)
			width 300px
		input:focus
			border 2px solid rgba(azul .4) 
			

		.btn-registrar
			background azul
			border-radius 15px
			box-sizing padding-box
			box-shadow inset 0 1px 0 0 #72b9eb, 0 1px 2px 0 #b3b3b3
			color white
			display block
			font-size 25px
			height 30px
			text-decoration none
			text-align center
			padding 15px
			width 300px
		.btn-registrar:hover
			background rgba(azul .75)
			
	
	#contenido
		background gris
		box-sizing border-box
		height 800px
		padding 20px
		width 100%

